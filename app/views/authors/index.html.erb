<h1>Listing authors</h1>
<div class="container">

<table class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>

<% @authors.each do |author| %>
  <tr>
    <td><%= author.username %></td>
    <td><%= author.email %></td>
    <td><%= link_to 'Show', author, class: "btn btn-primary btn-small" %></td>
    <td><%= link_to 'Edit', edit_author_path(author), class: "btn btn-small" %></td>
    <td><%= link_to 'Destroy', author, class: "btn btn-danger btn-small", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Author', new_author_path, class: "btn btn-primary"%>
</div>

