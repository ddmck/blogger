<h1>All Articles</h1>
<div class="container">
<div class"row">
<div class="span12">
<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <% if article.image.exists? %>
        <%= image_tag article.image.url(:thumb) %>
      <% end %>
      <%= link_to article.title, article_path(article), class: 'article_title', id: "article_#{article.id}" %>
    </li>
  <% end %>
</ul>
</div>
</div>
</div>